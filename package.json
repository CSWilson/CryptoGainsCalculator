{
  "name": "crypto-gains-calculator",
  "productName": "CryptoGainsCalculator",
  "description": "A simple to use cryptocurrency gains calculator.",
  "version": "0.0.1",
  "private": false,
  "license": "MIT",
  "author": "Christophor S. Wilson <chris@cswapps.com>",
  "copyright": "Â© 2018, C.S. Wilson and Associates inc.",
  "homepage": "http://cswilson.org",
  "main": "app/background.js",
  "repository": "https://bitbucket.org/CSWApps/cryptogainscalculator",
  "build": {
    "appId": "com.cswapps.crypto-gains-calculator",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "CSWilson",
        "repo": "CryptoGainsCalculator"
      }
    ]
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "pree2e": "webpack --config=build/webpack.app.config.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "e2e": "mocha temp/e2e.js --require source-map-support/register",
    "test": "npm run unit && npm run e2e",
    "start": "node build/start.js",
    "release": "npm test && webpack --config=build/webpack.app.config.js --env=production && electron-builder",
    "build": "npm test && webpack --config=build/webpack.app.config.js --env=production && electron-builder"
  },
  "dependencies": {
    "accounting": "^0.x",
    "axios": "^0.x",
    "electron-json-storage": "^4.x",
    "electron-log": "^2.x",
    "electron-updater": "^2.x",
    "fs-jetpack": "^1.x",
    "vue": "^2.x"
  },
  "devDependencies": {
    "@babel/core": "^7.x",
    "@babel/preset-env": "^7.x",
    "babel-eslint": "^8.x",
    "babel-loader": "^8.x",
    "babel-plugin-transform-object-rest-spread": "^7.x",
    "chai": "^4.x",
    "css-loader": "^0.x",
    "electron": "^2.x",
    "electron-builder": "^20.x",
    "electron-mocha": "^6.x",
    "eslint": "^4.x",
    "eslint-config-standard": "^11.x",
    "eslint-plugin-html": "^4.x",
    "eslint-plugin-import": "^2.x",
    "eslint-plugin-node": "^6.x",
    "eslint-plugin-promise": "^3.x",
    "eslint-plugin-standard": "^3.x",
    "friendly-errors-webpack-plugin": "^1.x",
    "mocha": "^5.x",
    "source-map-support": "^0.x",
    "spectron": "^3.x",
    "style-loader": "^0.x",
    "webpack": "^4.x",
    "webpack-merge": "^4.x",
    "webpack-node-externals": "^1.x"
  }
}
